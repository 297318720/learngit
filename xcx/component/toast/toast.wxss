.toast_content_box {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    position: fixed;
    z-index: 99999;
    top:0;
    /*background: rgba(255, 255, 255, 0.1);*/
}
.toast_content {
    z-index: 99999;
    width: 50%;
    padding: 30rpx;
    background-color: #000;
    /*background: rgb(0, 0, 0);*/
    border-radius: 20rpx;
}
.toast_content_text {
    height: 100%;
    width: 100%;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}