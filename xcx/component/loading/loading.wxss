.loading_content_box {
    display: flex;
    width: 100%;
    height: 100%;
    justify-content: center;
    align-items: center;
    position: fixed;
    z-index: 99999;
    top:0;
    /*background: rgba(255, 255, 255, 0.1);*/
}
.loading_content {
    width: 30%;
    padding: 30rpx;
    background: rgba(0, 0, 0, 0.8);
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.loading_content_text {
    width: 100%;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
}
.loading_content > image{
    width:80rpx;
    height:80rpx;
    margin-bottom: 20rpx;
}